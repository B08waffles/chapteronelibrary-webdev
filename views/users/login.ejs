<h1>Login</h1>
   <% if (messages.error) { %>
  <%= messages.error %>
<% } %> 
<form action="/users/login" method="POST" name='login-user-form' id='login-user-form'>
  <div>
    <label for="username">Username</label>
    <input type="text" id="username" name="username" required pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{5,}"
    title="Must contain at least one number and one uppercase and lowercase letter, and at least 5 or more characters">
  </div>
  <div>
    <label for="password">Password</label>
    <input type="password" id="password" name="password" required pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{5,}"
    title="Must contain at least one number and one uppercase and lowercase letter, and at least 5 or more characters" >
  </div>
  <button type="submit">Login</button>
</form>

