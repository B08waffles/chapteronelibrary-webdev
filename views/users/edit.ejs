<% if (messages.error) { %>
<div class="alert alert-danger" role="alert"><%- messages.error %></div>
<% } %>
<div class="card">
    <div class="card-header">
        Edit User
    </div>
    <div class="card-body">
        <form action="/users/edit/<%= userID %>" method="post">
            <div class="form-group">
                <label>firstName:</label>
                <input type="text" class="form-control" name="firstName" value="<%= firstName %>" autocomplete="off"
                    pattern="[A-Za-z]" required title="Must contain only lowercase and uppercase letters">
            </div>
            <div class="form-group">
                <label>lastName:</label>
                <input type="text" class="form-control" name="lastName" value="<%= lastName %>" autocomplete="off"
                    pattern="[A-Za-z]" required title="Must contain only lowercase and uppercase letters">
            </div>
            <div class="form-group">
                <label>userame:</label>
                <input type="text" class="form-control" name="username" value="<%= username %>" autocomplete="off"
                    required pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{5,}"
                    title="Must contain at least one number and one uppercase and lowercase letter, and at least 5 or more characters">
            </div>
            <div class="form-group">
                <label>Email:</label>
                <input type="text" class="form-control" name="email" value="<%= email %>" autocomplete="off" required
                    pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$" title="Must be a valid email">>
            </div>
            <div class="form-group">
                <label>Password:</label>
                <input type="text" class="form-control" name="password" value="<%= password %>" autocomplete="off"
                    required pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{5,}"
                    title="Must contain at least one number and one uppercase and lowercase letter, and at least 5 or more characters">
            </div>
            <div class="form-group">
                <label>accessRights (write either admin or staff in lowercase):</label>
                <input type="text" class="form-control" name="accessRights" value="<%= accessRights %>"
                    autocomplete="off" required pattern="[a-z]{5}"
                    title="Must be either admin or staff in lowercase, cannot be blank">
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-info" value="Update" />
            </div>
        </form>
    </div>
</div>