<div>
    <label>Title</label>
    <input type="text" name="title" value="<%= book.title %>" pattern="[A-Za-z]" required title="Must contain only lowercase and uppercase letters">
</div>
<div>
    <label>Author</label>
    <select name="author">
        <% authors.forEach(author => { %>
        <% if (author.id === book.author) { %>
        <option selected label="<%= author.name %>" value="<%= author.id %>">
            <% } else { %>
        <option label="<%= author.name %>" value="<%= author.id %>">
            <% } %>
            <% }) %>
    </select>
</div>
<div>
    <label>Publish Date</label>
    <input type="date" name="publishDate" value="<%= book.publishDate == null ? '' : 
 book.publishDate.toISOString().split('T')[0] %>">
</div>
<div>
    <label>Copies Sold</label>
    <input type="number" name="copiesSold" min="1" max="9999999999999999999999999" pattern="[0-9]" value="<%= book.copiesSold %>" title="Must be more than 1 and in numerical form">
</div>
<div>
    <label>Cover</label>
    <input type="file" name="cover" class="filepond">
</div>
<div>
    <label>Description</label>
    <textarea name="description" pattern="[A-Za-z]" title="Must contain only lowercase and uppercase letters"><%= book.description %></textarea>
</div>